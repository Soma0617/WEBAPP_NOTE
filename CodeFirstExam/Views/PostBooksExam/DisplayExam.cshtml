@model CodeFirstExam.Models.BookExam

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h2>@Html.DisplayFor(modelItem => Model.Title)</h2>
    <div class="card mb-4">
        @if (Model.Photo != null)
        {
            <img src="~/BookExamPhotos/@Model.Photo" class="card-img-top img-fluid" />
        }
        
        <div class="card-body">
            <p>@Html.Raw(Model.Description.Replace("\r\n", "<br>"))</p>
        </div>
        <div class="card-footer">
            <p class="text-end">
                @Html.DisplayFor(modelItem => Model.Author) 於
                @Html.DisplayFor(modelItem => Model.CreatedDate)
            </p>
        </div>
    </div>
</div>
<hr />
<div id="ReBookForm">
</div>
<hr />
<div>
    @await Component.InvokeAsync("VCReBooks", new { bookID = Model.BookID })
</div>

<div>
    <a asp-action="Index">回到留言板</a>
</div>

@section Scripts
{
    <script>
        $('#ReBookForm').load('/RePostBookExams/Create')
    </script>
}
