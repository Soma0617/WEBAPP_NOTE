@* 筆記( 二.3.i. ) : 在Default View上方加入@model IEnumerable<MyModel_CodeFirst.Models.ReBook> *@
@model IEnumerable<CodeFirstTeach.Models.ReBook>
@{
    Layout = null;
}

@* 筆記( 二.4.l. ) : 在VCReBook View Component的Default View中加入沒有回覆留言即不顯示的判斷 *@
@if (Model.Count() != 0)
{
    <h3 class="text-center">所有回覆</h3>
    <div class="border border-1 rounded p-3 bg-light">
        @foreach (var item in Model)
        {
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
            <p class="text-end">
                @Html.DisplayFor(modelItem => item.Author) 於 @Html.DisplayFor(modelItem => item.CreatedDate) 回覆留言
            </p>
            <hr />
        }
    </div>
}

