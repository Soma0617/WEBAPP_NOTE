<h2>第八單元：分數評價顯示</h2>

<form method="post">
    <label>請輸入分數（0~100）：</label>
    <input type="number" name="score" required />
    <button type="submit">送出</button>
</form>

@if (ViewBag.Result != null)
{
    <p style="color:@ViewBag.Color;">
        分數：@ViewBag.Score，結果：@ViewBag.Result
    </p>
}